<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<GridPane fx:controller="de.thowl.automomousInstantdocumentSystem.control.Controller" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="40.0" prefWidth="40.0" maxWidth="40.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <!--Sidebar-->
        <VBox fx:id="sidebar" maxWidth="40" minWidth="40" prefWidth="40.0" GridPane.columnIndex="0">
            <children>
                <Button fx:id="btnMainScene" text="Main" prefHeight="24.0" prefWidth="24.0" onAction="#btnMainSceneClick"/> 
                <Separator prefWidth="40.0" />
                <Button fx:id="btnLatexScene" text="Latex" prefHeight="24.0" prefWidth="24.0" onAction="#btnLatexSceneClick"/>
                <Separator prefWidth="40.0"/>
                <Button fx:id="btnDatabaseScene" text="Database" prefHeight="24.0" prefWidth="24.0"  onAction="#btnDatabaseSceneClick"/>
            </children>
        </VBox>
        <!--Buttons-->
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
            <children>
                <Label fx:id="lblAmmount" text="Ammount"/>
                <TextField fx:id="txtAmmount">
                    <VBox.margin>
                        <Insets bottom="17.0" />
                    </VBox.margin>
                </TextField>
                <Label fx:id="lblChapters" text="Chapters"/>
                <TextField fx:id="txtChapters">
                    <VBox.margin>
                        <Insets bottom="17.0" />
                    </VBox.margin>
                </TextField>
                <CheckBox text="Shuffle">
                <VBox.margin>
                    <Insets bottom="17.0" />
                </VBox.margin>
                </CheckBox>
                <Button fx:id="btnGenerateDocument" text="Generate" prefHeight="70.0" prefWidth="195.0" onAction="#btnGenerateDocumentClick"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
        </VBox>
        <!--Multipurpose Textarea-->
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
        </VBox>
    </children>
</GridPane>